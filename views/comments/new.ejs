<% include ../partials/header %>

<div class="container text-center">

<h2>Add New Comment in "<%= band.name %>" </h2>

		<form action='/bands/<%= band._id %>/comments' method='post'>
			<div class='form-group'>
				<input type='text' name='comment[text]' placeholder="text" class='form-control'/>
			</div>
			<div class='form-group'>
				<input type='text' name='comment[author]' placeholder="author" class='form-control' />	
			</div>				
			<div class="form-group">
				<input type="submit" value="Add" class="btn btn-success btn-block"/>
			</div>		
		</form>
		<hr />
		<a href='/bands/<%= band._id %>'> Go Back </a>

</div>

<% include ../partials/footer %>