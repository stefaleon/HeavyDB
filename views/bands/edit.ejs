<% include ../partials/header %>

<div class="container text-center">

<h2>Edit "<%= band.name %>"</h2>

		<form action='/bands/<%= band._id %>?_method=PUT' method='POST'>
			<input type='hidden' name='updated' value="<%= Date.now() %>" />
			<div class='form-group'>
				<input type='text' name='name' value="<%= band.name %>" class='form-control'/>
			</div>
			<div class='form-group'>
				<input type='text' name='image' value="<%= band.image %>" class='form-control' />	
			</div>
			<div class='form-group'>
				<textarea type='text' rows=10 name='description' class='form-control'><%= band.description %></textarea>	
			</div>		
			<div class="form-group">
				<input type="submit" value="Submit Changes" class="btn btn-success btn-block"/>
			</div>		
		</form>
		<hr />
		<a href='/bands'> Go Back </a>

</div>

<% include ../partials/footer %>