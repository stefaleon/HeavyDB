<% include ../partials/header %>

<div class="container text-center">

	<header class=jumbotron>
		<div class="container">
			<h2> <%= band.name %> </h2>	
			<hr />
			<img src=" <%= band.image %>" />
			
		</div>
	</header>
	
	<br /> <p> <%= band.description %> </p>

	<br /> <p> Created on <%= band.created.toUTCString() %> </p>
	<br /> <a href="/bands">Back to Bands</a>			

	<br />
	<hr />	
	<h3> Comments </h3>
	<br /> <a href="/bands/<%= band._id %>/comments/new">Add a Comment</a>
	<% band.comments.forEach(function(comment) { %>		
		<hr /><p>
		<%= comment.created.toUTCString() %> by <strong><%= comment.author || 'anonymous user' %></strong> - <%= comment.text %>
		</p>
	<%	}); %>

</div>


<% include ../partials/footer %>

	